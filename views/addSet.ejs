<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New LEGO Set</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include('partials/navbar', {page: '/lego/addSet' }) %>
  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Add New Set</h1>
          <p class="py-6">Enter the details of the new LEGO set.</p>
          <form action="/lego/addSet" method="POST">
            <div class="form-control">
              <label class="label">
                <span class="label-text">Set Name</span>
              </label>
              <input type="text" placeholder="Set Name" name="name" class="input input-bordered" required>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Set Number</span>
              </label>
              <input type="text" placeholder="Set Number" name="set_num" class="input input-bordered" required>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Year of Release</span>
              </label>
              <input type="number" placeholder="Year" name="year" class="input input-bordered" required>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Number of Parts</span>
              </label>
              <input type="number" placeholder="Number of Parts" name="num_parts" class="input input-bordered">
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Theme</span>
              </label>
              <select name="theme_id" class="select select-bordered">
                <% themes.forEach(theme => { %>
                  <option value="<%= theme.id %>"><%= theme.name %></option>
                <% }); %>
              </select>
            </div>
            <div class="form-control mt-6">
              <button type="submit" class="btn btn-primary">Add Set</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
